@model GR.Domains.Game

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/Game/details.css" />

<h3>Details</h3>
<hr />
<div class="row detailRow">
    <img src="@Model.ImgLink" alt="@Model.Title" width="100">
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-3">Platfroms</dt>
        <dd class="col-sm-9">
            @foreach (var p in Model.PlatformList)
            {
                var platform = p.Platform + " ";
                @Html.DisplayFor(modelItem => platform)
            }
        </dd>
        <dt class="col-sm-3">Genres</dt>
        <dd class="col-sm-9">
            @foreach (var g in Model.GenreList)
            {
                var genre = g.Genre + " ";
                @Html.DisplayFor(modelItem => genre)
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>