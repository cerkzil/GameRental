@model IEnumerable<GR.Domains.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlatformList)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreList)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @foreach (var p in item.PlatformList)
                {
                    var platform = p.Platform + " ";
                    @Html.DisplayFor(modelItem => platform)
                }
            </td>
            <td>
                @foreach (var g in item.GenreList)
                {
                    var genre = g.Genre + " ";
                    @Html.DisplayFor(modelItem => genre)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
